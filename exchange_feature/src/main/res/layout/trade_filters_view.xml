<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.sgorinov.exilehelper.exchange.presentation.views.AccountView
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_filter_height"
        app:fieldName="Seller Account"
        app:layout_constraintTop_toTopOf="parent" />

    <com.sgorinov.exilehelper.exchange.presentation.views.DropDownView
        android:id="@+id/listedDropdown"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_filter_height"
        android:layout_marginTop="4dp"
        app:fieldName="Listed"
        app:layout_constraintTop_toBottomOf="@id/account" />

    <com.sgorinov.exilehelper.exchange.presentation.views.DropDownView
        android:id="@+id/saleTypeDropdown"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_filter_height"
        android:layout_marginTop="4dp"
        app:fieldName="Sale Type"
        app:layout_constraintTop_toBottomOf="@id/listedDropdown" />

    <com.sgorinov.exilehelper.exchange.presentation.views.BuyoutView
        android:id="@+id/buyoutDropdown"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="4dp"
        app:fieldName="Buyout Price"
        app:layout_constraintTop_toBottomOf="@id/saleTypeDropdown" />
</androidx.constraintlayout.widget.ConstraintLayout>