<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.sgorinov.exilehelper.exchange.presentation.views.MinMaxView
        android:id="@+id/level"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_filter_height"
        android:layout_marginTop="4dp"
        app:fieldName="Level"
        app:layout_constraintTop_toTopOf="parent" />

    <com.sgorinov.exilehelper.exchange.presentation.views.MinMaxView
        android:id="@+id/dexterity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_filter_height"
        android:layout_marginTop="4dp"
        app:fieldName="Dexterity"
        app:layout_constraintTop_toBottomOf="@id/armour" />

    <com.sgorinov.exilehelper.exchange.presentation.views.MinMaxView
        android:id="@+id/strength"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_filter_height"
        android:layout_marginTop="4dp"
        app:fieldName="Strength"
        app:layout_constraintTop_toBottomOf="@id/evasion" />

    <com.sgorinov.exilehelper.exchange.presentation.views.MinMaxView
        android:id="@+id/intelligence"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_filter_height"
        android:layout_marginTop="4dp"
        app:fieldName="Intelligence"
        app:layout_constraintTop_toBottomOf="@id/energyShield" />
</androidx.constraintlayout.widget.ConstraintLayout>