<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/filterHeader"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/filter_button_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/filterEnabled"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="1dp"
            android:buttonTint="#FFF"
            android:checked="true"
            android:minWidth="0dp"
            android:minHeight="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filterShowHideButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/fontinsmallcaps"
            android:gravity="start|center_vertical"
            android:minHeight="0dp"
            android:padding="0dp"
            android:textAllCaps="false"
            android:textColor="@color/default_text_color"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/filterItemsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="32dp"
        android:paddingTop="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterHeader"
        tools:ignore="RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>