<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Group
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/filter_button_default"
        app:layout_constraintBottom_toTopOf="@id/headerGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/headerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="32dp" />

    <CheckBox
        android:id="@+id/filterEnabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="1dp"
        android:buttonTint="#FFF"
        android:checked="true"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintBottom_toTopOf="@id/headerGuideline"
        app:layout_constraintEnd_toStartOf="@id/filterShowHideButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/filterShowHideButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/fontinsmallcaps"
        android:gravity="start|center_vertical"
        android:minHeight="0dp"
        android:padding="0dp"
        android:textAllCaps="false"
        android:textColor="@color/default_text_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/headerGuideline"
        app:layout_constraintEnd_toStartOf="@id/filterClearAll"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/filterEnabled"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/filterClearAll"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/clear_filter_description"
        android:padding="0dp"
        android:src="@drawable/clear_24"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/headerGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/filterShowHideButton"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/filterItemsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerGuideline"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/socketFiltersSocketsHeader"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:background="@drawable/filter_textfield_default"
            android:fontFamily="@font/fontinsmallcaps"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/socket_filter_sockets_header"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:id="@+id/socketFiltersSocketsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/redSocketSocketsFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_textfield_redsocket"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/socket_filter_red_socket"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/greenSocketSocketsFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_textfield_greensocket"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/socket_filter_green_socket"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/blueSocketSocketsFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_textfield_bluesocket"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/socket_filter_blue_socket"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/whiteSocketSocketsFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_textfield_whitesocket"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/socket_filter_white_socket"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/minSocketSocketsFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1E2124"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/min_hint"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="2"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/maxSocketSocketsFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1E2124"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/max_hint"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/socketFiltersLinksHeader"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/filter_textfield_default"
            android:fontFamily="@font/fontinsmallcaps"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/socket_filter_links_header"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:id="@+id/socketFiltersLinksLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/redSocketLinksFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_textfield_redsocket"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/socket_filter_red_socket"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/greenSocketLinksFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_textfield_greensocket"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/socket_filter_green_socket"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/blueSocketLinksFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_textfield_bluesocket"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/socket_filter_blue_socket"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/whiteSocketLinksFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/filter_textfield_whitesocket"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/socket_filter_white_socket"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="2"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/minSocketLinksFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1E2124"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/min_hint"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="2"
                android:hint="@string/empty_hint"
                app:hintTextColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/maxSocketLinksFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1E2124"
                    android:fontFamily="@font/fontinsmallcaps"
                    android:gravity="center|center_vertical"
                    android:hint="@string/max_hint"
                    android:inputType="textNoSuggestions"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>