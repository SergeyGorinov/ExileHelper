<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/currencyGroupButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filter_button_default">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/currencyGroupButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/fontinsmallcaps"
            android:textAlignment="viewStart"
            android:textColor="#FFF8E1"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/currencyGroupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/currencyGroupSearchLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:hint="@string/empty_hint"
            android:visibility="gone"
            app:hintTextColor="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/currencyGroupSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1E2124"
                android:fontFamily="@font/fontinsmallcaps"
                android:gravity="center|center_vertical"
                android:inputType="textNoSuggestions"
                android:paddingVertical="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="#999999"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/currencyGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>