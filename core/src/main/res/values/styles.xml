<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="bottomNavigationStyle">@style/AppTheme.BottomNavStyle</item>
    </style>

    <style name="AppTheme.BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/secondaryDarkColor</item>
        <item name="itemIconTint">@color/bottom_nav_tint</item>
        <item name="itemTextColor">@color/bottom_nav_tint</item>
    </style>

    <style name="AppTheme.BottomNavStyle.TextAppearanceActive">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.BottomNavStyle.TextAppearanceInactive">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.MainFontStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/fontinsmallcaps</item>
        <item name="fontFamily">@font/fontinsmallcaps</item>
    </style>

    <style name="TitleFontStyle" parent="AppTheme.MainFontStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.DialogMenu" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowAnimationStyle">@style/AppTheme.DialogMenu.Animation</item>
    </style>

    <style name="AppTheme.DialogMenu.Animation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
