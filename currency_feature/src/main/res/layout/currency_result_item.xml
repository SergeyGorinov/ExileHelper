<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stockText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontinsmallcaps"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SelectableText" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/getExchangeData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:constraint_referenced_ids="getExchangeText,getExchangeImage,getExchangeLabel"
        app:flow_horizontalGap="8dp"
        app:flow_horizontalStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/stockText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/getExchangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontinsmallcaps"
        android:textColor="@color/primaryTextColor"
        tools:ignore="SelectableText" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/getExchangeImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/getExchangeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontinsmallcaps"
        android:textColor="@color/primaryTextColor"
        tools:ignore="SelectableText" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/payExchangeData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:constraint_referenced_ids="payExchangeText,payExchangeImage,payExchangeLabel"
        app:flow_horizontalGap="8dp"
        app:flow_horizontalStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/getExchangeData" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/payExchangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontinsmallcaps"
        android:textColor="@color/primaryTextColor"
        tools:ignore="SelectableText" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/payExchangeImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/payExchangeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontinsmallcaps"
        android:textColor="@color/primaryTextColor"
        tools:ignore="SelectableText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nickWithCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/fontinsmallcaps"
        android:gravity="start"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/playerStatus"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payExchangeData"
        tools:ignore="SelectableText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/playerStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/fontinsmallcaps"
        android:gravity="end"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/nickWithCountry"
        app:layout_constraintTop_toBottomOf="@id/payExchangeData"
        tools:ignore="SelectableText" />
</androidx.constraintlayout.widget.ConstraintLayout>